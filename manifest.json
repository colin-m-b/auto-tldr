{
  "manifest_version": 2,
  "name": "Auto TLDR",
  "description": "Summarizes the text on a website",
  "version": "1.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "popup.html",
    "default_title": "Auto TLDR"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["scripts/scrape.js"]
    }
  ]
}
